<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.led.led.ledControl"
    android:background="@drawable/back">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="SunShine"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@android:dimen/app_icon_size"
        android:autoText="false"
        android:textColor="#F34B0E"
        android:textAlignment="center"
        android:background="#ffffffb6" />


    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Manual"
        android:id="@+id/button5"
        android:layout_below="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_marginTop="70dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="AutomÃ¡tico"
        android:id="@+id/button6"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/button5"
        android:layout_marginTop="120dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Manual"
        android:id="@+id/textView3"
        android:layout_marginTop="42dp"
        android:layout_below="@+id/button3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seekBar"
        android:max="255"
        android:progress="1"
        android:indeterminate="false"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"
        android:layout_marginTop="50dp"
        android:visibility="invisible" />



    <ImageView
        android:layout_height="50dp"
        android:id="@+id/sol"
        android:src="@drawable/sol"
        android:layout_width="50dp"
        android:layout_alignTop="@+id/seekBar"
        android:visibility="invisible" />
    <ImageView
        android:layout_height="50dp"
        android:id="@+id/luna"
        android:src="@drawable/luna"
        android:layout_width="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/seekBar"
        android:visibility="invisible" />



    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abrir"
        android:id="@+id/button2"
        android:layout_below="@+id/button6"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cerrar"
        android:id="@+id/button3"
        android:layout_below="@+id/button6"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="30dp"
        android:visibility="invisible" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desconectar"
        android:id="@+id/button4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lumn"
        android:layout_alignTop="@+id/textView3"
        android:layout_toRightOf="@+id/button4"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="6dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/seekBar" />

</RelativeLayout>
